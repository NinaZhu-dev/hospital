{% extends 'comunes/_default.html.twig' %}

{% block contenido %}
<section class="bg-white py-5">
    <div class="container">
    <h2>Gestión de médicos y especialidades:</h2>
             {% include 'comunes/_mensajes.html.twig' %}
             <table class="table text-center text-black">
                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Apellido</th>
                        <th scope="col">Especialidad</th>
                        <th scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                {% for medico in medicos %}
                    <tr>
                        <td>{{ medico.id }}</td>
                        <td>{{ medico.nombre }}</td>
                        <td>{{ medico.apellido }}</td>
                        <td>
                            {% for especialidad in medico.especialidad %}
                                {{ especialidad.nombre }}
                                {% if not loop.last %} , {% endif %}
                            {% endfor %}
                            </td>
                        <td>
                            <a class="btn btn-warning rounded-pill px-3" href="{{ path('app_editar_medico', {'id': medico.id}) }}">Editar</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">Sin resultados</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

    <a class="btn btn-secondary rounded-pill px-5" href="{{ path('app_nuevo_medico') }}">Crear nuevo</a>

{% endblock %}